<!-- Loop over each object in the animals array -->
{{#each animals as |animal|}}
  <div class="row mb-4 animal">
    <div class="col s12 m5">
      <h2>
        <a href="/animal/{{animal.id}}">{{animal.name}}</a>
      </h2>
      <p>
        <span>{{
            animal.species
          }}</span>
      </p>
      <p>Created by
        {{animal.user.name}}
       </p>
    </div>
    <div class="col s12 m7">
      <p>
        {{animal.description}}
      </p>
    </div>
  </div>
{{/each}}
