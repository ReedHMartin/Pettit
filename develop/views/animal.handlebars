
<!--This will be the wrapper for the partial that shows the animals -->

<div class="container">
          <div class="row">
            <div class="col s12 m6 l3 pull-l2">
              <div class="center-align">
                <h2>Pet Info</h2>
                <span class="card-title">{{name}}</span>
                    <p>{{description}}</p>
                    <p>{{age}}</p>
                    <p>{{gender}}</p>
                    <p>{{size}}</p>
                    <p>{{status}}</p>
              </div>
            </div>

            <div class="col s12 m6 l3 push-l7">
                <div class="center-align">
                  <h2>Comments</h2>
                </div>
              </div>

            <div class="card-panel hoverable col s12 m12 l6 pull-l3">
              <a href="{{url}}" target="_blank">
                <div class="card">
                  <div class="card-image">
                    <img src="{{picture}}" />
                  </div>
                  <div class="card-content">
                  </div>
                </div>
              </a>
            </div>
            
          </div>
        </div>
